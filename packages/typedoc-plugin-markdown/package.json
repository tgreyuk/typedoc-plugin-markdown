{
  "name": "typedoc-plugin-markdown",
  "version": "4.0.0-next.1",
  "description": "A plugin for TypeDoc that enables TypeScript API documentation to be generated in Markdown.",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "npm-run-all lint-*",
    "lint-ts": "eslint ./src --ext .ts",
    "lint-markdown": "npm run docs && markdownlint ./docs/md",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "prebuild": "ts-node scripts/build-resources",
    "build": "rm -rf dist && tsc",
    "test": "jest --colors",
    "build-and-test": "npm run build && npm run test",
    "docs": "npm run build && npm-run-all docs-*",
    "docs-md1": "typedoc --plugin typedoc-plugin-markdown --options ../../stubs/typedoc.json --out ./test/docs/md/md-1",
    "docs-md2": "typedoc --plugin typedoc-plugin-markdown --readme \"none\" --symbolsWithOwnFile none --options ../../stubs/typedoc.json --out ./test/docs/md/md-2",
    "docs-html": "typedoc --plugin none --options ../../stubs/typedoc.json --out ./test/docs/html"
  },
  "author": "Thomas Grey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tgreyuk/typedoc-plugin-markdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tgreyuk/typedoc-plugin-markdown.git",
    "directory": "packages/typedoc-plugin-markdown"
  },
  "homepage": "https://github.com/tgreyuk/typedoc-plugin-markdown/tree/master/packages/typedoc-plugin-markdown",
  "keywords": [
    "markdown",
    "typescript",
    "documentation",
    "api",
    "typedocplugin",
    "typedoc"
  ],
  "peerDependencies": {
    "typedoc": ">=0.23.0"
  }
}
